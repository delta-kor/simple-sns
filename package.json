{
  "name": "simple-sns",
  "version": "1.0.0",
  "description": "simple sns for practice",
  "main": "dist/server.js",
  "repository": "https://github.com/delta-kor/simple-sns",
  "author": "delta-kor <deltakbot1@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:ts && yarn build:parcel",
    "build:ts": "tsc",
    "build:parcel": "parcel build views/scripts/**/*.ts --out-dir dist/client --no-source-maps",
    "deploy": "node .",
    "start": "yarn build && yarn deploy",
    "dev:ts": "tsc -w",
    "dev:node": "nodemon",
    "dev:parcel": "parcel watch views/scripts/**/*.ts --out-dir dist/client",
    "dev": "concurrently \"yarn dev:ts\" \"yarn dev:node\" \"yarn dev:parcel\""
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/lusca": "^1.6.2",
    "@types/node": "^14.11.1",
    "concurrently": "^5.3.0",
    "log-symbols": "^4.0.0",
    "nodemon": "^2.0.4",
    "parcel": "^1.12.4",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "lusca": "^1.6.1",
    "pug": "^3.0.0"
  }
}
